<Page
    x:Class="GroupGPixelCrypt.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Source Image Column -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1" Width="350" Height="350" Margin="0,0,0,10">
                <Image x:Name="sourceImage" Stretch="Uniform"/>
            </Border>
            <Button Content="Open Source Image" Width="150" Click="OpenSourceImageButton_Click"/>
        </StackPanel>

        <!-- Message Input Column (Image only for embedding) -->
        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1" Width="350" Height="350" Margin="0,0,0,10">
                <Image x:Name="messageImage"
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
            </Border>

            <Button Content="Open Message File" Width="150"
                    Click="OpenMessageFileButton_Click"/>

            <Button Content="Embed" Width="150" Margin="0,10,0,0"
                    Click="EmbedButton_Click"/>

            <Button Content="Extract" Width="150"
                    Click="ExtractButton_Click"/>
        </StackPanel>

        <!-- Output Column (Image OR Text after extraction) -->
        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1" Width="350" Height="350" Margin="0,0,0,10">
                <Grid>
                    <!-- Output image -->
                    <Image x:Name="targetImage" Stretch="Uniform" Visibility="Collapsed"/>

                    <!-- Output text -->
                    <ScrollViewer x:Name="messageScrollViewer" Visibility="Collapsed">
                        <TextBlock x:Name="messageTextBlock"
                                   TextWrapping="Wrap"
                                   FontSize="18"/>
                    </ScrollViewer>
                </Grid>
            </Border>
            <Button Content="Save Output Image" Width="150" Click="SaveOutputButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
