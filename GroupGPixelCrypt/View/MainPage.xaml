<Page
    x:Class="GroupGPixelCrypt.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GroupGPixelCrypt"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Margin="40">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1"
                    Width="350" Height="350" Margin="0,0,0,10">
                <Image x:Name="sourceImage" Stretch="Uniform"/>
            </Border>

            <TextBlock Text="Open Image"
                       HorizontalAlignment="Center"/>

            <Button x:Name="openImageButton"
                    Content="Open"
                    Width="120" Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Click="OpenImageButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1"
                    Width="350" Height="350" Margin="0,0,0,10">
                <TextBox x:Name="middleTextBox"
                         Text=""
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto"/>
            </Border>

            <TextBlock Text="Open Image or Text"
                       HorizontalAlignment="Center"/>

            <Button x:Name="openImageOrTextButton"
                    Content="Open"
                    Width="120" Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Click="OpenImageOrTextButton_Click"/>

            <CheckBox x:Name="encryptCheckBox"
                      Content="Encrypt"
                      IsChecked="True"
                      Margin="0,10,0,0"
                      HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
            <Border BorderBrush="Black" BorderThickness="1"
                    Width="350" Height="350" Margin="0,0,0,10">
                <Image x:Name="targetImage" Stretch="Uniform"/>
            </Border>

            <TextBlock Text="Output"
                       HorizontalAlignment="Center"/>

            <Button x:Name="saveOutputButton"
                    Content="Save"
                    Width="120" Margin="0,8,0,0"
                    HorizontalAlignment="Center"
                    Click="SaveOutputButton_Click"/>

            <Image x:Name="tempImage"></Image> <!-- TODO: Remove this line after testing-->
        </StackPanel>

    </Grid>
</Page>
